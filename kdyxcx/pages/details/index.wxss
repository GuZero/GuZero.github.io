.hearder .text {
  font-size: 40rpx;
  margin-left: 70rpx;
  font-weight: 700;
}

.item {
  padding-left: 40rpx;
  background-color: #fff;
  font-size: 34rpx;
  color: #000;
}

.item .info {
  line-height: 88rpx;
  height: 88rpx;
  border-bottom: 1px solid #e5e5e5;
}

.item .none {
  border-bottom: none;
}

.tel {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 66%;
}

.tel .icon {
  content: '';
  background: url('//img.aimoge.com/FjVK4Ogwf_aAJuKMvosr2tdhnIRp') no-repeat center center;
  background-size: 100% 100%;
  width: 46rpx;
  height: 46rpx;
