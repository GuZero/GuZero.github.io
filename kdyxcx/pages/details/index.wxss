/* pages/details/index.wxss */

page {
  background-color: #eceef1;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.hearder {
  height: 260rpx;
  background-color: #008cff;
  color: #fff;
  padding: 0 44rpx;
  display: flex;
  align-items: center;
}

.hearder .image {
  width: 126rpx;
  height: 112rpx;
}

/*等待取*/

.wait {
  content: "";
  width: 126rpx;
  height: 126rpx;
  background: url("//img.aimoge.com/FuizKz383iR_Xp7cTfLdNPB0-AwY")no-repeat center center;
  background-size: 100% 100%;
}

