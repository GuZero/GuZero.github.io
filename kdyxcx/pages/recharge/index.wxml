<!--pages/recharge/index.wxml-->
<view class="container">
  <view class="hearder">
    <view class="left">
      <view class="image">
        <image src="../../images/recharge/01.png"></image>
      </view>
      <view>
        <view class="text">当前余额（元）</view>
        <view class="font-48 mt_28">100:00</view>
      </view>
    </view>
    <view class="center"></view>
    <view class="right">
      <view class="image">
        <image src="../../images/recharge/02.png"></image>
      </view>
      <view>
        <view class="text">剩余件数（件）</view>
        <view class="font-48 mt_28">9999</view>
      </view>
    </view>
  </view>
  <view class="main">
    <view class="text">选择充值套餐</view>
    <view>
      <view class="item">
        <view class="btn">5元</view>
        <view class="btn">10元</view>
        <view class="btn">20元</view>
      </view>
      <view class="item mt_40">
        <view class="btn">50元</view>
        <view class="btn">100元</view>
        <view class="btn">200元</view>
      </view>
    </view>
    <view class="recharge_btn">
      <button class="button button-blue {{isActiveBtn ? '' : 'disabled' }} ">
          充值
      </button>
    </view>
  </view>
  <view class="gege-tip fixed" animation="{{animOfNoneNetWork}}">{{animMsg}}</view>
</view>