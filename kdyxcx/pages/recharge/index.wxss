/* pages/recharge/index.wxss */

.hearder {
  background-color: #008cff;
  color: #fff;
  font-size: 28rpx;
  width: 100%;
  display: flex;
  justify-content: space-around;
  padding: 76rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
}

.left {
  display: flex;
  align-items: center;
  width: 49%;
}

.center {
  height: 108rpx;
  border-left: 1rpx solid rgba(255, 255, 255, 0.5);
  margin-right: 18rpx;
}

.right {
  display: flex;
  align-items: center;
  width: 49%;
}

.image {
  width: 108rpx;
  height: 108rpx;
  margin-right: 22rpx;
}

.font-48 {
  font-size: 48rpx;
}

.hearder .text {
  height: 50rpx;
  line-height: 50rpx;
}
.main{
    overflow: hidden;
    clear: both;
}
.main .text {
  font-size: 28rpx;
  color: #888;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
}

.main .btn {
  width: 190rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  color: #008cff;
  border: 1rpx solid #008cff;
  border-radius: 10rpx;
}

.item {
  display: flex;
  justify-content: space-between;
}

.mt_40 {
  margin-top: 40rpx;
}

.feetype {
  font-size: 48rpx;
  line-height: 108rpx;
  width: 27%;
  height: 85.3px;
  background-color: #7fc5ff;
  color: #fff;
  text-align: center;
  margin: 0 3% 3% 3%;
  position: relative;
  float: left;
  border-radius: 4px;
}

.feetype:active, .feetype.checked {
  background-color: #4ed188;
}

.feetype .checked {
  content: '';
  background: url('//img.aimoge.com/FuADgwvCO9jFD5remqfjBaktpL18') -1px -1px  no-repeat;
  background-size: 72rpx 72rpx;
  width: 72rpx;
  height: 72rpx;
  display: block;
  position: absolute;
  top: 0;
  left: 0;
  box-sizing: border-box;
 -webkit-box-sizing: border-box;
  border-radius: 4px;
}

.feetype .detail {
  position: absolute;
  background-color: transparent;
  color: #fff;
  font-size: 26rpx;
  text-align: center;
  width: 100%;
  bottom: 0;
  line-height: 26rpx;
  margin: 2px 0;
  height: 52rpx;
}

.feetype .money {
  display: inline-block;
  position: relative;
  text-indent: 24rpx;
}

.feetype .money:before {
  content: '￥';
  font-size: 36rpx;
  font-weight: bold;
  position: absolute;
  top: 0px;
  left: -36rpx;
}

.feetype .line {
  display: block;
  border-bottom: 4rpx #fff dotted;
  height: 20rpx;
  width: 82%;
  left: 9%;
  bottom: 62rpx;
}

.feetype .line:before, .feetype .line:after {
  content: '';
  display: block;
  position: absolute;
  width: 32rpx;
  height: 32rpx;
  border-radius: 100%;
  background-color: #fff;
  left: -46rpx;
  bottom: -16rpx;
}

.feetype .line:after {
  left: auto;
  right: -46px;
}

.feetype.fimg {
  background-color: transparent;
  line-height: 0;
  height: auto;
}

.feetype.fimg image {
  max-height: 100%;
  width: 100%;
  line-height: 0;
  height: auto;
}

.recharge_btn {
  margin: 60rpx auto;
  width: 90%;
}
/*弹出框样式*/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 1001;
  background: #fff;
  margin-top: -150rpx;
  margin-left: -300rpx;
  border-radius: 5px;
  text-align: center;
}

.drawer_title {
  padding-top: 20rpx;
  padding-bottom: 60rpx;
  font: 32rpx;
  text-align: center;
}

.drawer_icon {
  width: 106rpx;
  height: 106rpx;
  display: inline-block;
  margin-top: 40rpx;
}

