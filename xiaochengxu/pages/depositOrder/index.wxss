/* pages/depositOrder/index.wxss */

page {
  background-color: #efeff4;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.header {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 32rpx;
  font-size: 32rpx;
  color: #c3c3c3;
  border-bottom: 1rpx #eee solid;
  background-color: #4285f4;
  align-items: center;
  box-sizing: border-box;
}

.header .tag {
  left: 32rpx;
  top: 0;
  background-image: url('//img.aimoge.com/Fi7keeAH_hoAfbUFnvUVGgB5ET6Y');
  background-repeat: no-repeat;
  background-size: 48rpx 48rpx;
  background-position: center center;
  width: 48rpx;
  height: 48rpx;
}

.header .input {
  flex: 1;
}

.header .text {
  color: #666;
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
  background-color: #fff;
  border-radius: 12px;
  padding: 0 48rpx 0 32rpx;
  margin-left: 32rpx;
}

.search_btn {
  background: url('https://img.aimoge.com/FgyUPywZ4Jv9XXoSRGvetyhz9t2i') 0 0 no-repeat;
  position: absolute;
  background-size: 80% 80%;
  width: 30rpx;
  height: 42rpx;
  right: 46rpx;
  top: 50%;
  margin-top: -16rpx;
  display: block;
}

/*内容部分*/

.container {
  padding-bottom: 156rpx;
}

.item {
  padding: 32rpx;
  display: flex;
  color: #353535;
  position: relative;
  font-size: 32rpx;
  background: #fff;
  /*justify-content: space-around;*/
}

.item:after {
  content: '';
  display: block;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 1px;
  background-color: #ccc;
  transform: scale(1, 0.5);
}

.check_icon {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: -1rpx;
  right: 0;
  background: url('https://img.aimoge.com/FnzZFojwOO4F7djnvs5hKD5Y-U6b')0 0 no-repeat;
  background-size: 100% 100%;
}

.item .right {
  margin-left: 70rpx;
}

.item .right view {
  height: 64rpx;
  line-height: 64rpx;
}

.item .left text {
  line-height: 70rpx;
  height: 70rpx;
  font-size: 14px;
  text-align: center;
}

.item .left .image {
  margin-top: 30rpx;
  width: 175rpx;
  height: 97rpx;
}

.item .left .image1 {
  margin-top: 30rpx;
  width: 175rpx;
  height: 99rpx;
}

.item .left .image2 {
  /*margin-top: 10rpx;*/
  width: 170rpx;
  height: 133rpx;
}

.item .left .image3 {
  /*margin-top: 10rpx;*/
  width: 175rpx;
  height: 184rpx;
}

.none:before {
  height: 0;
}

.nocheack {
  color: #ccc;
}

.footer {
  bottom: 0;
  left: 0;
  background: #fff;
  display: flex;
  width: 100%;
  height: 120rpx;
  align-items: center;
  margin-top: 28rpx;
  justify-content: space-between;
  padding-left: 36rpx;
  font-size: 14px;
  box-sizing: border-box;
}

.footer .image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}

.footer .btn {
  width: 192rpx;
  height: 120rpx;
  color: #fff;
  background: #4285f4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

.footer .disabled {
  background: #b2b2b2;
  color: #eaeaea;
  width: 192rpx;
  height: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

/*弹出框样式*/

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}

.drawer_box {
  width: 600rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 1001;
  background: #fff;
  margin-top: -150rpx;
  margin-left: -300rpx;
  border-radius: 5px;
  text-align: center;
}

.drawer_title {
  padding-top: 20rpx;
  padding-bottom: 60rpx;
  font: 16px "microsoft yahei";
  text-align: center;
}

.drawer_icon {
  width: 106rpx;
  height: 106rpx;
  display: inline-block;
  margin-top: 40rpx;
}

/*公共样式*/

.blue {
  color: #4285f4;
}

.gray {
  color: #ccc;
}

.margin_t30 {
  margin-top: 30rpx;
}

.container imgae {
  width: 100%;
  height: 100%;
}
