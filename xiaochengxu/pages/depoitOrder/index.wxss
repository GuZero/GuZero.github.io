/* pages/depositOrder/index.wxss */

page {
  background-color: #efeff4;
  height: 100%;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.header {
  width: 100%;
  height: 94rpx;
  background-color: #4285f4;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  top: 0;
  z-index: 1111;
}

.img {
  width: 43rpx;
  height: 43rpx;
  margin-left: 16rpx;
  margin-right: 16rpx;
}

.img image {
  width: 100%;
  height: 100%;
}

.input {
  width: 630rpx;
  margin-left: 16rpx;
}

.input:after {
  content: '';
  background: url("https://img.aimoge.com/FgyUPywZ4Jv9XXoSRGvetyhz9t2i") 0 0 no-repeat;
  background-size: 80% 80%;
  display: block;
  width: 30rpx;
  height: 42rpx;
  position: absolute;
  right: 46rpx;
  top: 50%;
  margin-top: -16rpx;
}

.input input {
  background: #fff;
  border-radius: 35rpx;
  width: 100%;
  padding: 10rpx 54rpx 10rpx 160rpx;
  box-sizing: border-box;
}

.search_active {
  background: url('https://img.aimoge.com/Fs-fQpBgPqsJ6SEkVUGfeArmraeu') 0 0 no-repeat;
  background-size: 80% 80%;
}

/*内容部分*/

.container {
  padding-top: 96rpx;
  padding-left: 32rpx;
  background: #fff;
}

.item {
  padding: 32rpx 0rpx 32rpx 0;
  display: flex;
  color: #353535;
  position: relative;
  /*justify-content: space-around;*/
}

.item:before {
  content: '';
  display: block;
  position: absolute;
  bottom: 0rpx;
  width: 100%;
  height: 1px;
  background-color: #ccc;
  transform: scale(1, 0.5);
}

.check_icon {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  top: -1rpx;
  right: 0;
  background: url('https://img.aimoge.com/FnzZFojwOO4F7djnvs5hKD5Y-U6b')0 0 no-repeat;
  background-size: 100% 100%;
}

.item .right {
  margin-left: 70rpx;
}

.item .right view {
  height: 64rpx;
  line-height: 64rpx;
}

.item .left text {
  line-height: 70rpx;
  height: 70rpx;
  font-size: 14px;
  text-align: center;
}

.item .left .image {
  margin-top: 30rpx;
  width: 175rpx;
  height: 97rpx;
}

.item .left .image1 {
  margin-top: 30rpx;
  width: 175rpx;
  height: 99rpx;
}

.item .left .image2 {
  /*margin-top: 10rpx;*/
  width: 170rpx;
  height: 133rpx;
}

.item .left .image3 {
  /*margin-top: 10rpx;*/
  width: 175rpx;
  height: 184rpx;
}

.none:before {
  height: 0;
}

.nocheack {
  color: #ccc;
}

.footer {
  background: #fff;
  display: flex;
  height: 120rpx;
  align-items: center;
  margin-top: 28rpx;
  justify-content: space-between;
  padding-left: 36rpx;
  font-size: 14px;
}

.footer .image {
  width: 36rpx;
  height: 36rpx;
  margin-right: 32rpx;
}

.footer .btn {
  width: 192rpx;
  height: 120rpx;
  color: #fff;
  background: #4285f4;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 16px;
}

/*公共样式*/

.blue {
  color: #4285f4;
}

.gray {
  color: #ccc;
}

.margin_t30 {
  margin-top: 30rpx;
}

.container imgae {
  width: 100%;
  height: 100%;
}
