/* pages/login/index.wxss */

page {
  background-color: #efeff4;
}

.container {
  background-color: #efeff4;
}

.logintext {
  padding: 32rpx;
  color: #888;
  font-size: 28rpx;
}

.formitem {
  display: flex;
  flex-direction: row;
  padding-left: 32rpx;
  height: 90rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e5e5e5;
  background-color: #fff;
  font-size: 34rpx;
  color: #353535;
}

.form-item {
  display: flex;
  align-items: center;
}

.form-text {
  width: 170rpx;
}

.percent_40 {
  width: 40%;
}

.form-input {
  height: 100%;
}

.last-item {
  flex: 1;
}

.code-btn {
  justify-content: center;
  color: #4285f4;
  border-left: 1rpx solid #e5e5e5;
}

.code-btn:active {
  background-color: #fafafa;
}

.is-code-disabled {
  color: #888;
}

.formitem::last-child {
  border-bottom: none;
}

.code-input {
  width: 100%;
}

.formradio {
  padding: 24rpx 0 0 40rpx;
  font-size: 28rpx;
}

.inblock {
  display: inline-block;
  vertical-align: middle;
}

.radio-icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 36rpx;
  height: 36rpx;
  background: #fcfff4;
  border-radius: 8rpx;
}

.radio-icon-checked {
  position: absolute;
  left: 8rpx;
  top: 10rpx;
  width: 18rpx;
  height: 8rpx;
  border: 4rpx solid #09bb07;
  border-top: none;
  border-right: none;
  -moz-transform: rotate(-45deg);
  -ms-transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.navigator {
  color: #576b95;
  padding-top: 24rpx;
    font-size: 28rpx;
}

.loginbtn {
  width: 90%;
  margin: 60rpx auto 0;
}
.code-dialog{
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.57);
    z-index: 30000;  
}
.imgCode {
    /*display: none;*/
    width: 280px;
    height: 180px;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    background-color: #fff;
    left: 50%;
    margin-left: -140px;
    top: 20%;
    padding: 23px 35px;
    border-radius: 8px;
    z-index: 30000;      
}
.closePic {
    background: transparent;
    width: 20px;
    height: 20px;
    top: 8px;
    left: 15px;
}
.div {
    width: 150px;
    height: 50px;
    margin: 0 auto;
}
.div img {
    width: 150px;
    height: 50px;
    border: none;
}
.picode {
    margin: 12px 0 0 0;
    border-bottom: 1px #4d4d4d solid;
    height: 28px;
    line-height: 28px;
}
.reflush {
    background: url(https://img.aimoge.com/FvsVMv1Umg5JsDSN0Uz-vZE2EYqs) center center no-repeat;
    background-size: 12px;
    width: 30px;
    height: 50px;
    top: 0;
    right: -33px;
}
.picode input {
    color: #4d4d4d;
    height: 24px;
    width: 100%;
    line-height: 24px;
    text-align: center;
    font-size: 14px;
}

.ok {
    color: #4285f4;
    border: 1px #4285f4 solid;
    text-align: center;
    border-radius: 22px;
    height: 35px;
    line-height: 35px;
    margin-top: 15px;
}