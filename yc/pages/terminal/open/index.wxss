/* pages/terminal/open/index.wxss */

.page {
    height: 100vh;
    box-sizing: border-box;
}

.logo-box {
    width: 100%;
    padding: 160rpx;
    box-sizing: border-box;
}

.btn-box {
    width: 220rpx;
    height: 220rpx;
    left: 50%;
    margin-left: -110rpx;
    bottom: 110rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 220rpx;
    background-color: #ffc200;
    font-size: 38rpx;
    color: #fff;
    box-shadow: 0 10rpx 16rpx rgba(255, 177, 64, 0.5);
}

.icon-box {
    width: 80rpx;
    height: 80rpx;
    bottom: 110rpx;
    right: 60rpx;
}

.loading-box {
    width: 240rpx;
    height: 240rpx;
    background-color: rgba(0, 0, 0, 0.8);
    color: #fff;
    left: 50%;
    margin-left: -120rpx;
    top: 35%;
    border-radius: 10rpx;
    text-align: center;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.weui-loading {
    width: 44rpx;
    height: 44rpx;
}

.tips-box {
    width: 100vw;
    height: 100vh;
    left: 0;
    top: 0;
    border-top: 2rpx solid #f2f2f2;
}

.tips-box .bg {
    width: 100%;
    height: 100%;
}

.tips-box .bg image {
    width: 100%;
    height: 100%;
}

.tips-box .text {
    font-size: 36rpx;
    color: #666;
    position: absolute;
}

.tips-box .text text {
    color: #ff8b2f;
}

.tips-box .text-1 {
    top: 135rpx;
    right: 124rpx;
}

.tips-box .text-2 {
    top: 365rpx;
    left: 130rpx;
}

.tips-box .text-3 {
    top: 580rpx;
    right: 124rpx;
}

.tips-box .text-4 {
    top: 780rpx;
    left: 130rpx;
    text-align: center;
}

.tips-box .new-user-btn {
    width: 580rpx;
    height: 92rpx;
    line-height: 92rpx;
    font-size: 32rpx;
    color: #fff;
    text-align: center;
    background-color: #ffb33f;
    border-radius: 46rpx;
    left: 50%;
    margin-left: -290rpx;
    bottom: 88rpx;
}

.tips-box .new-user-btn:active {
    background-color: #ff9802;
}
