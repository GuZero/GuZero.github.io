page {
    background-color: #f5f8fa;
}

.weui-label, .weui-input {
    font-size: 28rpx;
}

.weui-cells {
    margin-bottom: 15rpx;
}

.info-title {
    border-bottom: 2rpx solid #f2f2f2;
}

.text-right {
    text-align: right;
}

.placeholder {
    color: #ccc;
}

.footer {
    background-color: #ffb140;
    width: 100%;
    height: 96rpx;
    line-height: 96rpx;
    text-align: center;
    color: #fff;
    left: 0;
    bottom: 0;
    font-size: 32rpx;
}

.foote:active {
    background-color: #ff9802;
}

.weui-cell__bd {
    padding: 6rpx 0;
}
