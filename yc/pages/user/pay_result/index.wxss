/* pages/user/pay_result/index.wxss */

.container {
    border-top: 2rpx solid #fafafa;
    height: 100vh;
}

.msg-box {
    width: 100%;
    text-align: center;
    margin-top: 134rpx;
    font-size: 36rpx;
    color: #333;
}

.icon-box {
    width: 200rpx;
    margin: 0 auto;
    height: 230rpx;
}

.btn-box {
    width: 100%;
    display: flex;
    left: 0;
    bottom: 60rpx;
    justify-content: space-between;
}

.btn-box button {
    width: 40%;
    font-size: 30rpx;
    border: none;
}

.btn-box .btn-1 {
    background-color: #fff;
    color: #ffb140;
    border: 1px solid #ffb140;
}

.btn-box .btn-2 {
    color: #fff;
    background-color: #ffb140;
}

.tips {
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
    background-color: #fa5858;
    color: #fff;
}

.share-btn {
    width: 650rpx;
    height: 88rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    margin: 40rpx auto;
    background-color: #ffb140;
    border-radius: 10rpx;
}

.text-box {
    display: flex;
    justify-content: center;
    width: 100%;
    font-size: 30rpx;
    color: #ccc;
}

.text-box navigator {
    color: #ffb140;
}

.share-btn::after {
    border: none;
}
