/* pages/address/index.wxss */

page {
    background-color: #f5f8fa;
    height: 100%;
    overflow-y: auto;
    -webkit-overflow-scrolling: touch;
}

.search {
    margin: 0;
    top: 0;
    z-index: 300;
    width: 100%;
    height: 120rpx;
    line-height: 120rpx;
    padding: 0 30rpx;
    font-size: 32rpx;
    color: #c3c3c3;
    background-color: #fff;
    align-items: center;
    box-sizing: border-box;
    border-top: 2rpx solid #f2f2f2;
}

.search .input {
    flex: 1;
}

.search input {
    color: #666;
    font-size: 28rpx;
    height: 70rpx;
    line-height: 70rpx;
    background-color: #f5f8fa;
    border-radius: 50rpx;
    padding: 0 66rpx 0 66rpx;
    margin-right: 30rpx;
}

.search-icon {
    left: 10rpx;
    top: 50%;
    margin-top: -25rpx;
    background-image: url('//img.aimoge.com/FuJpps9wnY11aDZIjkM35OF1Qp3g');
    background-repeat: no-repeat;
    background-size: 70% 70%;
    background-position: center center;
    width: 50rpx;
    height: 50rpx;
    z-index: 300;
}

.search .input .tag {
    right: 48rpx;
    top: 0;
    background-image: url('//img.aimoge.com/Fp5Fb_0YJWJASyYvqsDVGCrPXbvC');
    background-repeat: no-repeat;
    background-size: 70% 70%;
    background-position: center center;
    width: 66rpx;
    height: 66rpx;
    z-index: 300;
}

.search-btn {
    color: #ffc200;
}

.info-box {
    padding-top: 135rpx;
    box-sizing: border-box;
}

.item {
    padding: 30rpx 0 30rpx 30rpx;
    border-bottom: 2rpx solid #f2f2f2;
    background-color: #fff;
    color: #333;
}

.item .item-title {
    margin-bottom: 10rpx;
    font-weight: 600;
}

.item .f-12 {
    color: #999;
}

.item .item-icon {
    top: 50%;
    margin-top: -24rpx;
    right: 30rpx;
    width: 48rpx;
    height: 48rpx;
}

.nearby-list {
    margin-top: 20rpx;
}

.all-list {
    margin-top: 20rpx;
}
.h-42{
    height: 42vh;
}
.solid {
    width: 100%;
    height: 2rpx;
    background-color: #f2f2f2;
}

.search-info {
    height: 100vh;
    padding-top: 120rpx;
    box-sizing: border-box;
}

.nearby-title {
    font-weight: 600;
    padding: 30rpx 0 0 30rpx;
    background-color: #fff;
    color: #333;
}

.nothing {
    width: 100%;
    text-align: center;
    font-size: 28rpx;
    height: 60rpx;
    background-color: #fff;
}

.empty-content {
    color: #b8b8b8;
    font-size: 32rpx;
    text-align: center;
    padding-top: 20%;
    width: 100%;
}

.empty-content .empty-img {
    width: 320rpx;
    height: 280rpx;
    margin: 20rpx auto;
    background: url('//img.aimoge.com/FvB9d_4rsyKxiY_fPsotUtiAlei_') no-repeat;
    background-size: 100%;
}