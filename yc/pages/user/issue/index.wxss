/* pages/issue/index.wxss */

page {
    border-top: 1px solid #f2f2f2;
    background-color: #f8f8f8;
}

.page {
    height: 100%;
    width: 100%;
}

.item {
    background-color: #fff;
    padding: 30rpx;
    font-size: 28rpx;
    margin-bottom: 15rpx;
}

.item .icon {
    width: 12rpx;
    height: 40rpx;
    border-radius: 50rpx;
    background-color: #ffc200;
    margin-right: 30rpx;
}

.item .item-title {
    display: flex;
    align-items: center;
    font-weight: 600;
}

.item .item-content {
    margin: 30rpx 0;
}
