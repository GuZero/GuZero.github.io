/* pages/order/index.wxss */

page {
    background-color: #f5f8fa;
}

.container {
    padding-bottom: 120rpx;
}

.purchase_limits {
    margin-bottom: 10rpx;
    text-align: center;
    padding: 10rpx;
    color: #fff;
    font-size: 28rpx;
    background-color: #e64340;
    word-break: break-all;
}

.phone-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    background-color: #fff;
    font-size: 28rpx;
    padding: 0 30rpx;
    border-top: 2rpx solid #fafafa;
    color: #333;
}

.phone-box .text-btn {
    color: #ffc200;
}

.info-box {
    width: 100%;
    background-color: #fff;
    font-size: 28rpx;
    line-height: 20px;
    padding: 30rpx;
    margin-top: 15rpx;
    box-sizing: border-box;
}

.info-box .line-icon {
    width: 100%;
    right: 0;
    left: 0;
    height: 4rpx;
}

.info-box .line-icon image {
    width: 100%;
}

.order-box {
    background-color: #fff;
    padding-left: 30rpx;
    color: #333;
    font-size: 28rpx;
    margin-top: 15rpx;
}

.order-box .order-title {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 2rpx solid #fafafa;
}

.order-box .order-content {
    padding: 30rpx 30rpx 30rpx 0;
    display: flex;
    justify-content: space-between;
}

.order-box .order-content .content-l {
    display: flex;
}

.order-box .order-content .image-box {
    margin-right: 20rpx;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
    overflow: hidden;
}

.order-box .order-content .content-r {
    display: flex;
    align-items: center;
}

.order-box .order-content  .icon-l {
    margin-left: 20rpx;
    width: 24rpx;
    height: 28rpx;
}

.price-box, .pay-box {
    margin-top: 15rpx;
    font-size: 28rpx;
    padding-left: 30rpx;
    background-color: #fff;
    color: #333;
}

.price-box .price-item {
    display: flex;
    height: 80rpx;
    align-items: center;
    padding-right: 30rpx;
    box-sizing: border-box;
    justify-content: space-between;
    border-bottom: 2rpx solid #fafafa;
}

.price-box .price-item .icon-l {
    width: 20rpx;
    height: 28rpx;
    right: 30rpx;
    top: 50%;
    margin-top: -14rpx;
}

.price-box  .coupon-item {
    padding-right: 60rpx;
}

.price-box .price-sum {
    flex-flow: row-reverse;
}

.price-box .price-sum .f-12 {
    margin-left: 20rpx;
}

.pay-box .pay-item {
    display: flex;
    height: 88rpx;
    align-items: center;
    padding-right: 30rpx;
    box-sizing: border-box;
    justify-content: space-between;
    border-bottom: 2rpx solid #fafafa;
}

.pay-box .pay-item .icon-box {
    width: 48rpx;
    height: 48rpx;
}

.footer-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 98rpx;
    padding-left: 30rpx;
    box-sizing: border-box;
    left: 0;
    background-color: #fff;
    bottom: 0;
}

.footer-box .footer-l {
    height: 98rpx;
    display: flex;
    align-items: center;
}

.footer-box .footer-l .price-box {
    margin-top: -2rpx;
}

.footer-box .pay-btn {
    width: 200rpx;
    height: 98rpx;
    line-height: 98rpx;
    color: #fff;
    text-align: center;
    border-radius: 0;
    background-color: #ffc200;
    padding-right: 0px;
    margin-left: 0px;
    margin-right: 0px;
}

.footer-box .pay-btn::after {
    border: none;
}

.footer-box .pay-btn:active {
    background-color: #ff9802;
}

.layer-box {
    width: 100vw;
    height: 100vh;
    background-color: rgba(122, 122, 122, 0.6);
    left: 0;
    bottom: 0;
}

.layer-box .layer-content {
    width: 570rpx;
    margin: 0 auto;
    margin-top: 30%;
    height: 280rpx;
    background-color: #fff;
    border-radius: 10rpx;
    text-align: center;
    position: relative;
    padding-top: 50rpx;
}

.layer-box .layer-content .content-title {
    font-size: 32rpx;
    color: #333;
}

.layer-box .layer-content .pay-btn {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #ffc200;
    position: absolute;
    left: 0;
    bottom: 0;
    color: #fff;
    border-radius: 0 0 10rpx 10rpx;
    font-size: 30rpx;
}

.layer-box .layer-content .input-box {
    width: 500rpx;
    margin: 50rpx auto;
    height: 80rpx;
}

.layer-box .layer-content .input-box input {
    font-size: 30px;
    top: 0;
    left: 0;
    text-align: left;
    height: 80rpx;
    padding-left: 20rpx;
    line-height: 80rpx;
}

.layer-box .layer-content .cancel-box {
    right: 16rpx;
    top: 16rpx;
}

.member-price {
    margin-right: 0;
}

.mg-l-5 {
    margin-left: 10rpx;
}

.tips-box {
    width: 100%;
    background-color: #fa5658;
    color: #fff;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    font-size: 24rpx;
}

/* 2018/7/24 */

.select-box {
    background-color: #fff;
    padding: 30rpx;
    font-size: 28rpx;
    box-sizing: border-box;
    margin-top: 15rpx;
}

.select-box .top-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.select-box .top-box .f-14 {
    color: #fa5858;
}

.select-box .top-box .top-icon {
    width: 30rpx;
    height: 30rpx;
    margin-top: 8rpx;
}

.select-box .top-box>view {
    display: flex;
}

.select-box .bottom-box {
    /* display: flex;
    align-items: center; */
    margin-top: 30rpx;
    font-size: 28rpx;
}

.select-box .bottom-box>view {
    display: flex;
    align-items: center;
}

.select-box .bottom-box input::placeholder {
    color: #ccc;
    font-weight: normal;
}

.select-box .bottom-box label {
    margin-right: 30rpx;
}

.select-box .bottom-box  input {
    font-weight: 600;
}

.wx-switch-input {
    width: 72rpx !important;
    height: 42rpx !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
    width: 74rpx !important;
    height: 42rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
    width: 42rpx !important;
    height: 40rpx !important;
}

.deliver-layer-box {
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    position: fixed;
    left: 0;
    top: 0;
    z-index: 2;
}

.deliver-layer-box .deliver-container {
    width: 570rpx;
    background-color: #fff;
    border-radius: 10rpx;
    font-size: 26rpx;
    color: #333;
    margin: 300rpx auto;
    padding: 30rpx 50rpx;
    box-sizing: border-box;
}

.deliver-layer-box .deliver-container>view {
    margin-top: 30rpx;
}

.deliver-layer-box .deliver-container>view:first-child {
    margin: 0;
}

.deliver-layer-box .deliver-title {
    font-size: 32rpx;
    text-align: center;
    font-weight: 600;
}

.deliver-layer-box .close-btn {
    width: 32px;
    height: 32px;
    left: 50%;
    margin-left: -16px;
    bottom: -100rpx;
}

.choose-address {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333;
    height: 82rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    background-color: #fff;
    border-top: 2rpx solid #f2f2f2;
}

.choose-address .icon-box {
    width: 25rpx;
    height: 32rpx;
    margin-top: 6rpx;
    margin-right: 12rpx;
}

.choose-address .icon-l {
    width: 18rpx;
    height: 30rpx;
}
