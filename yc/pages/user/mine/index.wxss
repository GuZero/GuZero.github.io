/* pages/user/index.wxss */

.container {
    height: 100vh;
}

.bg-box {
    width: 100%;
    height: 270rpx;
    background: url('https://img.aimoge.com/FkRNNFO-uR8utsaQCtG3EgFzwubV') no-repeat;
    background-size: 100%;
    padding: 40rpx 78rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}

.bg-box .user-box {
    display: flex;
    align-items: center;
}

.bg-box .avatar-box {
    width: 112rpx;
    height: 112rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-right: 27rpx;
}

.bg-box .icon-1 {
    width: 100rpx;
    height: 30rpx;
    background: linear-gradient(-52deg, rgba(229, 229, 229, 1) 0%, rgba(255, 255, 255, 1) 49%, rgba(207, 207, 207, 1) 100%, rgba(245, 219, 84, 1) 100%, rgba(230, 230, 230, 1) 100%);
    border-radius: 15rpx;
    font-size: 18rpx;
    text-align: center;
    line-height: 30rpx;
    color: rgba(136, 136, 136, 1);
}

.bg-box  .nickname {
    font-size: 40rpx;
    color: #fff;
}

.bg-box .tab-box {
    width: 600rpx;
    height: 140rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 4rpx 10rpx 0 rgba(208, 208, 208, 0.4);
    left: 50%;
    margin-left: -300rpx;
    bottom: -70rpx;
    display: flex;
    align-items: center;
}

.tab-box .tab-item {
    width: 50%;
    text-align: center;
    font-size: 24rpx;
    color: #333;
}

.bg-box .tab-box .solid {
    width: 2rpx;
    height: 98rpx;
    background-color: #fff0c1;
    left: 50%;
    top: 50%;
    margin-top: -49rpx;
}

.order-box {
    padding: 0 30rpx;
    margin-top: 30rpx;
}

.order-box .order-title {
    font-size: 32rpx;
    color: #333;
    font-weight: 600;
}

.order-box .choose-box {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 37rpx;
}

.order-box .choose-box navigator {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 33.33%;
    text-align: center;
}

.order-box .choose-box .order-icon {
    width: 72rpx;
    height: 70rpx;
    margin-bottom: 6rpx;
}

.order-box .choose-box .order-solid {
    width: 2rpx;
    height: 55rpx;
    background-color: #ccc;
    position: absolute;
}

.order-box .choose-box .solid-1 {
    left: 220rpx;
}

.order-box .choose-box .solid-2 {
    right: 250rpx;
}

.list-box {
    margin-top: 60rpx;
    padding: 0 30rpx;
}

.list-box  .item {
    height: 98rpx;
    width: 100%;
    display: flex;
    border-top: 2rpx solid #eee;
    font-size: 32rpx;
    color: #333;
    align-items: center;
}

.list-box  .item .icon-l {
    width: 16rpx;
    height: 28rpx;
    top: 50%;
    margin-top: -26rpx;
    right: 0;
}

