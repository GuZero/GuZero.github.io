/* pages/order_list/index.wxss */

page {
    background-color: #f5f8fa;
}

.container {
    border-top: 2rpx solid #f2f2f2;
}

.switch-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    color: #999;
    font-size: 28rpx;
    height: 80rpx;
    padding: 0 50rpx;
    align-items: center;
    background-color: #fff;
    border-top: 2rpx solid #f2f2f2;
    left: 0;
    top: 0;
    z-index: 2;
    box-sizing: border-box;
}

.switch-box .active {
    color: #333;
}
.switch-box>view{
    text-align: center;
    width: 50%;
}

.switch-box .active::after {
    content: '';
    position: absolute;
    bottom: -14rpx;
    left: 50%;
    width: 70rpx;
    height: 8rpx;
    border-radius: 50rpx;
    background-color: #ffc200;
    margin-left: -35rpx;
}

.item {
    padding-left: 30rpx;
    background-color: #fff;
    font-size: 28rpx;
    /* margin-top: 15rpx; */
    margin-bottom: 15rpx;
}

.item .item-title {
    display: flex;
    height: 80rpx;
    justify-content: space-between;
    padding-right: 30rpx;
    align-items: center;
    border-bottom: 2rpx solid #f2f2f2;
}

.item .item-icon {
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    overflow: hidden;
}

.item .item-content {
    display: flex;
    justify-content: space-between;
    border-bottom: 2rpx solid #f2f2f2;
    padding: 30rpx 30rpx 30rpx 0;
    box-sizing: border-box;
}

.item .content-l {
    display: flex;
}

.item .content-l .item-icon {
    margin-left: 20rpx;
}

.item .content-r {
    display: flex;
    align-items: center;
}

.item .icon-l {
    margin-left: 20rpx;
    width: 24rpx;
    height: 28rpx;
}

.item .item-footer {
    display: flex;
    justify-content: space-between;
    padding-right: 30rpx;
    height: 80rpx;
    line-height: 80rpx;
}

.color-orange {
    color: #ffc200;
}

.nothing-box {
    width: 100vw;
    height: 100vh;
    position: absolute;
    left: 0;
    top: 0;
    font-size: 32rpx;
    color: #999;
    padding: 138rpx 60rpx;
    text-align: center;
    box-sizing: border-box;
}

.nothing-box .image-box {
    width: 320rpx;
    height: 280rpx;
    margin: 0 auto;
}

.nothing-box .footer-box {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    height: 98rpx;
    box-sizing: border-box;
    background-color: #ffc200;
    font-size: 32rpx;
    border-radius: 10rpx;
    margin-top: 80%;
}
