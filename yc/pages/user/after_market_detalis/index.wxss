/* pages/after_market_detalis/index.wxss */

page {
    background-color: #f8f8f8;
}

.tips-msg {
    width: 100%;
    height: 150rpx;
    background-color: #ffc200;
    font-size: 34rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    color: #fff;
}

.tips-msg .icon-box {
    width: 90rpx;
    height: 84rpx;
    margin: 0 30rpx;
}

.item {
    padding: 40rpx 30rpx;
    background-color: #fff;
    border-top: 2rpx solid #f2f2f2;
    border-bottom: 2rpx solid #f2f2f2;
    margin-top: 30rpx;
}

.item .item-title {
    font-size: 32rpx;
    color: #000;
    margin-bottom: 10rpx;
}

.weui-uploader__bd {
    margin-top: 20rpx;
}

.button-box {
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    left: 0;
    bottom: 30rpx;
}

.button-box .gege-btn {
    background-color: #ffc200;
    border: none;
}

.button-box .gege-btn:active {
    background-color: #ff9802;
}

