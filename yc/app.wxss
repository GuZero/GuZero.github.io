@import 'style/weui/index.wxss';

page, .container {
    box-sizing: border-box;
}

.rel {
    position: relative;
}

.abs {
    position: absolute;
}

.fixed {
    position: fixed;
}

image {
    max-height: 100%;
    max-width: 100%;
}

/** 小箭头，包括上下左右方向 **/

.aw-t::after {
    content: '';
    display: block;
    position: absolute;
    width: 22rpx;
    height: 22rpx;
    border-top: 2px #c7c7cc solid;
    border-right: 2px #c7c7cc solid;
    border-top-right-radius: 2px;
    transform: rotate(-45deg);
}

.aw-b::after {
    content: '';
    display: block;
    position: absolute;
    width: 22rpx;
    height: 22rpx;
    border-top: 2px #c7c7cc solid;
    border-right: 2px #c7c7cc solid;
    border-top-right-radius: 2px;
    transform: rotate(135deg);
}

.aw-l::after {
    content: '';
    display: block;
    position: absolute;
    width: 22rpx;
    height: 22rpx;
    border-top: 2px #c7c7cc solid;
    border-right: 2px #c7c7cc solid;
    border-top-right-radius: 2px;
    transform: rotate(-135deg);
}

.aw-r::after {
    content: '';
    display: block;
    position: absolute;
    width: 22rpx;
    height: 22rpx;
    border-top: 2px #c7c7cc solid;
    border-right: 2px #c7c7cc solid;
    border-top-right-radius: 2px;
    transform: rotate(45deg);
}

/** 小箭头 end **/

/** button **/

.button {
    height: 94rpx;
    line-height: 94rpx;
    background-color: #ccc;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
}

.yc-button {
    background-color: #ffc200;
}

button::after {
    border: none;
}

.yc-button:active {
    background-color: #e49494;
}

.yu-button.disabled, .yu-button.disabled:active {
    background-color: #ccc;
}

.ellipsis {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.member-price {
    color: #f50;
    margin-right: 10rpx;
}

.original-price {
    font-size: 24rpx;
    color: #999;
    text-decoration: line-through;
}

.flex {
    display: flex;
    display: -webkit-flex;
}

.f-11 {
    font-size: 22rpx;
}

.f-12 {
    font-size: 24rpx;
}

.f-13 {
    font-size: 26rpx;
}

.f-14 {
    font-size: 28rpx;
}

.f-15 {
    font-size: 30rpx;
}

.f-16 {
    font-size: 32rpx;
}

.f-17 {
    font-size: 34rpx;
}

.f-18 {
    font-size: 38rpx;
}

.f-20{
    font-size: 40rpx;
}

.f-w-b {
    font-weight: bold;
}

.color-theme {
    color: #ffb140;
}

.color-black {
    color: #333;
}

.color-gray {
    color: #999;
}

.nothing-box {
    width: 100vw;
    height: 100vh;
    position: absolute;
    left: 0;
    top: 0;
    font-size: 32rpx;
    color: #999;
    padding: 138rpx 60rpx;
    text-align: center;
    box-sizing: border-box;
}

.nothing-box .image-box {
    width: 320rpx;
    height: 280rpx;
    margin: 0 auto;
}

.nothing-box .footer-box {
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    height: 98rpx;
    box-sizing: border-box;
    background-color: #ffc200;
    font-size: 32rpx;
    border-radius: 10rpx;
    margin-top: 80%;
}

.weui-cell:before, .weui-cells:after, .weui-cells:before, .weui-cells:before,
.weui-form-preview:before, .weui-form-preview:after,
.weui-form-preview__hd:after, .weui-form-preview__ft:after, .weui-navbar {
    border-color: #f2f2f2 !important;
}
