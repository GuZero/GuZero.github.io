/* components/coupon/index.wxss */

.coupon-box {
    position: fixed;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.6);
    left: 0;
    bottom: 0;
    z-index: 4;
}

.coupon-box .coupon-image {
    width: 600rpx;
    height: 466rpx;
    margin: 30% auto;
}

.coupon-box .coupon-image-1 {
    width: 624rpx;
    height: 737rpx;
    margin: 20% auto;
}

.coupon-box  image {
    width: 100%;
    height: 100%;
}

.rel {
    position: relative;
}

.abs {
    position: absolute;
}

.coupon-box  .coupon-btn {
    height: 82rpx;
    line-height: 82rpx;
    width: 540rpx;
    background-color: #ff8930;
    color: #fff;
    text-align: center;
    font-size: 32rpx;
    border-radius: 10rpx;
    left: 50%;
    margin-left: -270rpx;
    bottom: 30rpx;
}

.coupon-box  .coupon-btn:active {
    background-color: #ff9802;
}

.coupon-box .close-btn {
    width: 70rpx;
    height: 70rpx;
    bottom: -140rpx;
    left: 50%;
    margin-left: -35rpx;
}

.f-12 {
    font-size: 24rpx;
}

.f-14 {
    font-size: 28rpx;
}

.color-orange {
    color: #ff7e00;
}

.coupon-box  .coupon-contetn .item-box {
    width: 540rpx;
    border-radius: 10rpx;
    left: 50%;
    margin-left: -270rpx;
    background-color: #fff;
}
